# =================================
# BUILDERBOT BAILEYS CONFIGURATION
# =================================

# Server Configuration
PORT=3008
WEB_PORT=3001

# Environment Configuration
NODE_ENV=development
# Set to 'true' when running in Docker container for local development
DOCKER_CONTAINER=false

# Bot Basic Configuration
BOT_NAME=wordle-tracker-bot

# Authentication Method
# Use QR Code (recommended for first setup)
USE_PAIRING_CODE=false

# If using pairing code instead of QR:
# USE_PAIRING_CODE=true
# PHONE_NUMBER=+1234567890

# Browser Configuration
BROWSER_NAME=Windows
BROWSER_CLIENT=Chrome
BROWSER_VERSION=Chrome 114.0.5735.198

# Performance Optimization
# Enable experimental store for better performance
EXPERIMENTAL_STORE=false

# Time to release session files (6 hours = 21600000ms)
TIME_RELEASE=21600000

# Auto refresh interval (disabled = 0)
AUTO_REFRESH=0

# Message Handling
# Options: 'none', 'host', 'both'
WRITE_MYSELF=none

# Group Configuration
# true = ignore group messages, false = process group messages
GROUPS_IGNORE=false

# Status Configuration
# true = read message status, false = don't read status
READ_STATUS=false

# Media Configuration
# true = enable GIF playback, false = disable
GIF_PLAYBACK=false

# Store Configuration
# true = use Baileys store, false = don't use store
USE_BAILEYS_STORE=true

# Database Configuration (Remote)
# For Turso/libsql: libsql://your-database-url.turso.io
